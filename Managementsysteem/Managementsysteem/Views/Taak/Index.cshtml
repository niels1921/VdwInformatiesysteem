@model IEnumerable<Managementsysteem.Models.Taak>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<form asp-controller="Project" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Zoek" />
    </p>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerwachteUren)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GewerkteUren)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VerwachteUren)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GewerkteUren)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Werknemer)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Bewerk</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Bekijk</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
        }
    </tbody>
</table>
