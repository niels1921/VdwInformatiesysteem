@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}
@model Managementsysteem.Models.ViewModels.HomeViewmodel



<div class="row">
    <div class="col-md-6">
        <h2>Mijn taken<a class="btn btn-default pull-right" asp-controller="Taak" asp-action="Index">Alle taken </a></h2>

        @foreach (Taak taak in Model.Taak)
        {
        <div class="col-lg-12 hometaak">
            @taak.Naam
                    <a class="btn btn-info pull-right knop" asp-controller="Taak" asp-action="Details" asp-route-id="@taak.Id">Bekijk taak</a>
                </div>
                <hr />

        }

    </div>
    <div class="col-md-6">
        <h2>Projecten<a class="btn btn-default pull-right" asp-controller="Project" asp-action="Index">Alle Projecten </a></h2>

        @foreach (Project project in Model.Project)
    {

        <div class="col-lg-12 homeproject">
            @project.Naam
            <a class="btn btn-warning pull-right knop" asp-controller="Taak" asp-action="Details" asp-route-id="@project.Id">Bekijk project</a>
        </div>
        <hr />
}

    </div>
    <div class="col-md-12">
        <h2>Afspraken <a class="btn btn-default pull-right" asp-controller="Afspraak" asp-action="Index">Afspraken </a></h2>

        @foreach (Afspraak afspraak in Model.Afspraak)
    {
        <div class="col-lg-12 homeafspraak">
            @afspraak.Text
        </div>
        <hr />
}

    </div>

   

</div>
