@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}
@model Managementsysteem.Models.ViewModels.HomeViewmodel



<div class="row">
    <div class="col-md-12">
        <div class="col-md-8 infoblock">
            <h2>Mijn taken<a class="btn btn-primary pull-right" asp-controller="Taak" asp-action="Index">Alle taken </a></h2>


            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Naam
                        </th>

                        <th>
                           Datum
                        </th>
                        <th>
                            Verwachte uren
                        </th>

                
                        <th>
                           Afgerond
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ var taken = 0; }
                    @foreach (Taak taak in Model.Taak)
    {
        taken++;

        if (taken < 6)
        {

                <tr>
                    <td>
                        <a asp-controller="Taak" asp-action="Details" asp-route-id="@taak.Id"> @Html.DisplayFor(modelItem => taak.Naam)</a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => taak.Datum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => taak.VerwachteUren)
                    </td>



                    <td>
                        @Html.DisplayFor(modelItem => taak.Afgerond)
                    </td>

                    <td class="nopad">
                        @if (taak.Afgerond != true)
        {
                <a class="btn btn-success pull-right" asp-controller="Taak" asp-action="Afronden" asp-route-id="@taak.Id">Afronden</a>
}
else
{

                <a class="btn btn-danger" asp-action="Delete" asp-controller="Taak" asp-route-id="@taak.Id">Verwijderen</a>

}

                    </td>
                </tr>

}

}
                </tbody>
            </table>



        </div>

        <div class="col-md-4 infoblock">
            <div class="col-md-12">
                <h2>Projecten<a class="btn btn-primary pull-right" asp-controller="Project" asp-action="Index">Alle Projecten </a></h2>
                <hr />
                @{ var projecten = 0; }
                @foreach (Project project in Model.Project)
                {
                    projecten++;
                    if (projecten < 4)
                    {

            <div class="row">
                <div class="col-lg-12 homeproject">
                    @project.Naam
                    <a class="btn btn-warning pull-right knop" asp-controller="Project" asp-action="Details" asp-route-id="@project.Id">Bekijk project</a>
                </div>
            </div>
                    }
                }
                <hr />

            </div>
            <div class="col-md-12">
                <h2>Afspraken <a class="btn btn-primary pull-right" asp-controller="Afspraak" asp-action="Index">Afspraken </a></h2>
                @{ var afspraken = 0; }
                @foreach (Afspraak afspraak in Model.Afspraak)
                {
                    afspraken++;
                    if (afspraken < 4)
                    {

            <div class="row">
                <div class="col-lg-12 homeafspraak">
                    <span> @afspraak.Text</span>
                    <span class="pull-right"> @afspraak.Start</span>
                </div>
            </div>
                    }
                }

            </div>

            </div>
        </div>

</div>
<hr />
<div class="col-md-12 align-bottom">
    <h2 style="padding-right: 15px;">Een greep uit onze klanten <a class="btn btn-primary pull-right" asp-controller="Klant" asp-action="Index">Klanten </a></h2>
    @{ var klanten = 0; }
    @foreach (Klant klant in Model.Klant)
    {
        klanten++;
        if (klanten < 4)
        {
        <div class="col-lg-4 homeklant">
            <a asp-controller="Klant" asp-action="Details" asp-route-id="@klant.Id">
                <img src="~/Uploads/@klant.Naam/@klant.Profiel_foto" class="profilePicture" />
            </a>

        </div>
        }
    }

</div>
