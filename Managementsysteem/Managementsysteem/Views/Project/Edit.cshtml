@model Managementsysteem.Models.Project

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Edit</h2>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="col-md-6 infoblock">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naam" class="control-label"></label>
                    <input asp-for="Naam" class="form-control" />
                    <span asp-validation-for="Naam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Deadline" class="control-label"></label>
                    <input asp-for="Deadline" class="form-control" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>

        </div>
        <div class="col-md-6 infoblock">

            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <textarea rows="8" asp-for="Omschrijving" class="form-control"></textarea>
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Klant_Id" class="form-control" />

        </div>
        <div class="form-group">
            <input type="submit" value="Toevoegen" class="btn btn-success toevoegen" />
        </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
