@model IEnumerable<Managementsysteem.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Projecten</h2>

<div class="row search">
    <div class="col-lg-6">
        <form asp-controller="Project" asp-action="Index" method="get">

            <div class="input-group">
                <input type="text" class="form-control" name="SearchString" placeholder="Zoeken...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Zoek!</button>
                </span>
            </div><!-- /input-group -->
        </form>

    </div><!-- /.col-lg-6 -->
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Startdatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Klant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Klant.Naam)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Bewerk</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Bekijk</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
                </td>
            </tr>
        }
    </tbody>
</table>
